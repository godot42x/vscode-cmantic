{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}", // current vsode binary executable path
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "${workspaceFolder}/test/workspace", // the cpp workspace
                "--disable-extension=tdennis4496.cmantic", //  avoid same command registry confliction
            ],
            "outFiles": [
                "${workspaceFolder}/dist/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "${defaultBuildTask}", // search tasks.json for isDefault property
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
                "${workspaceFolder}/test/workspace"
            ],
            "env": {
                "DEBUG_TESTS": "1"
            },
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "Pretest",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
